<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Record to modify fields from project main screen -->
        <record id="edit_project_sprint_management" model="ir.ui.view">
            <field name="name">project.project.form.updateTemplate</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name = "backup" attrs="{'readonly':[('active','=',False)]}"/>
                    <field name = "responsableTecnico" attrs="{'readonly':[('active','=',False)]}"/>
                </field>

                <xpath expr="//button[@name='attachment_tree_view']" position="after">
                    <button type="action" name="sprintAction" class="oe_stat_button" icon="fa-calendar-times-o" string="Sprints">
                    </button>
                </xpath>
                <xpath expr="//button[@name='action_view_all_rating']" position="after">
                    <button type="object"
                        class="oe_stat_button"
                        icon="fa-align-left"
                        string="Gantt">
                    </button>

                    <button type="object"
                        class="oe_stat_button"
                        icon="fa-line-chart"
                        string="Burndown chart">
                    </button>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sprint_kanban">
            <field name="name">project.sprint.kanban</field>
            <field name="model">project.sprint</field>
            <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image"/>
                <field name="candidat_name"/>
                <field name="candidat_age"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('recrutement.touscandidats', 'image', record.id.raw_value)" alt="recrutement" class="o_image_64_contain"/>
                                </div>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" t-att-src="_s +/hr/static/src/img/default_image.png" alt="Default"/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="display_name"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                 <li>
                                     Nom:
                                     <field name="candidat_name"/>
                                 </li>
                                 <li>
                                     Age :
                                     <field name="candidat_age"/>
                                 </li>
                             </ul>
                         </div>
                     </div>
                 </t>
             </templates>
         </kanban>
     </field>
 </record>

    </data>
</odoo>