<odoo>
    <data>

        <record id="project_update_project_sprint_stage_tree" model="ir.ui.view">
            <field name="name">budgeting.tool.task.tree</field>
            <field name="model">project.sprint.stage</field>
            <field name="arch" type="xml">
                <tree string="Tareas" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="project_update_project_sprint_stage_action" model="ir.actions.act_window">
            <field name="name">Etapas Sprint</field>
            <field name="res_model">project.sprint.stage</field>
            <field name="view_id" ref="project_update_project_sprint_stage_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stage
                </p><p>
                    Create a stage to better manage and track your project.
                </p>
            </field>
        </record>

        <menuitem id="project_update_project_sprint_stage_menu"
                  action="project_update_project_sprint_stage_action"
                  parent="project.menu_project_config"
                  sequence="4"
                  name="Etapas Sprint" />

    </data>
</odoo>