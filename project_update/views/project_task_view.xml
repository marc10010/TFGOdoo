<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edit_project_task_management" model="ir.ui.view">
            <field name="name">project.task.form.updateTemplate</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <field name="project_id" position="after">
                    <field name="sprint" domain="[('project_id', '=', project_id)]" context="{'project_id': project_id}"/>
                </field>

                <field name="user_id" position="after">
                    <field name="sequence" groups="base.group_no_one" string="Prioridad" help="0-> Muy importante 10-> menos importante"/>
                   <!-- <field name="priority"/>-->
                   <!-- <field name="dependencia"/> -->
                </field>

                <field name="date_deadline" position="after">
                    <field name="motive_deadline" string="Motivo deadline" attrs="{'invisible': [('visible','=',False)], 'required': [('visible','!=',False)] }"/>
                    <field name="visible" attrs="{'invisible': True}"/>
                </field>

                <field name="tag_ids" position="after">
                    <button action="project_update.view_date_reason_wizard" name ="test"/>
                    <field name="planned_hours"/>
                    <field name="effective_hours"/>
                    <field name="progress" string="Horas dedicadas (%)"/>
                </field>

                <field name="parent_id" position="replace">
                    <field name="parent_id"
                           domain="[('project_id', '=', project_id), ('parent_id', '=', False)]"
                           attrs="{'invisible' : [('subtask_count', '>', 0)]}"
                           groups="project.group_subtask_project"/>
                </field>
            </field>
        </record>
        
        <record id="task_kanban_update" model="ir.ui.view">
            <field name="name">project.task.kanban.updateCard</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                  <xpath expr="//strong[@class='o_kanban_record_title']" position="before">
                      <strong><field name="sprint"/><br/></strong>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
